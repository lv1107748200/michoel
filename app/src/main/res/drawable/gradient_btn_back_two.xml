<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape >
            <corners android:radius="5dp" />
            <gradient
                android:angle="360"
                android:endColor="@color/color_618"
                android:startColor="@color/color_30b" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape >
            <corners android:radius="5dp" />
            <solid android:color="@color/color_aca" />
            <stroke
                android:width="1dp"
                android:color="@color/color_aca"/>
        </shape>
    </item>

</selector>