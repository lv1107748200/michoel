<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/press_one"
    android:paddingRight="@dimen/item_margin_two"
    android:paddingLeft="@dimen/item_margin_two"
    >
    <TextView
        android:id="@+id/head_tv"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center"
        style="@style/Text0"
        />
    <TextView
        android:id="@+id/head_tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/全部"
        android:layout_marginRight="@dimen/item_margin_three"
        style="@style/Text2"
        />
    <ImageView
        android:id="@+id/head_image"
        android:layout_width="@dimen/margin_14"
        android:layout_height="@dimen/margin_14"
        android:background="@drawable/article_search"
        android:layout_gravity="center_vertical"
        />
</LinearLayout>