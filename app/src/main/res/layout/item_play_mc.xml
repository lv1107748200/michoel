    <!--信息显示-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_9"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/time_lift_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text7"
            android:text="00:00"
            android:layout_gravity="center_vertical"
            />


        <SeekBar
            android:layout_weight="1"
            android:id="@+id/musicSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="@dimen/margin_4"
            android:paddingStart="@dimen/margin_10"
            android:paddingEnd="@dimen/margin_10"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:progressDrawable="@drawable/layer_list_three"
            android:thumb="@drawable/selected_radius_two"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/time_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text7"
            android:text="00:00"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

    <!--相关操作-->
    <LinearLayout
        android:layout_marginTop="@dimen/margin_11"
        android:paddingLeft="@dimen/margin_11"
        android:paddingRight="@dimen/margin_11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/layout_play_type"
                style="@style/m_image_style_one"
                android:background="@drawable/xunhuan"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            >
            <ImageView
                android:id="@+id/add_play_list"
                android:layout_alignParentLeft="true"
                style="@style/m_image_style_one"
                android:background="@drawable/add_p"
                />

            <RelativeLayout
                android:layout_width="@dimen/margin_33"
                android:layout_height="@dimen/margin_25"
                android:layout_centerInParent="true"
                >
                <ImageView
                    android:id="@+id/down_image"
                    android:layout_centerInParent="true"
                    style="@style/m_image_style_one"
                    android:background="@drawable/press_down"
                    />
                <ImageView
                    android:id="@+id/down_image_checked"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="@dimen/margin_12"
                    android:layout_height="@dimen/margin_12"
                    android:background="@drawable/arc_bc_layout_six"
                    android:src="@drawable/icon_down_check_true"
                    android:visibility="gone"
                    />
            </RelativeLayout>

            <ImageView
                android:id="@+id/image_share"
                android:layout_alignParentRight="true"
                android:background="@drawable/myfenxiang"
                style="@style/m_image_style_one" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/layout_play_list"
                android:layout_alignParentRight="true"
                style="@style/m_image_style_one"
                android:background="@drawable/list"
                />

        </RelativeLayout>

    </LinearLayout>


    <!--播放控制-->

    <LinearLayout
        android:layout_marginBottom="@dimen/margin_30"
        android:layout_marginTop="@dimen/margin_30"
        android:paddingLeft="@dimen/margin_20"
        android:paddingRight="@dimen/margin_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <LinearLayout
            android:id="@+id/layout_up"
         style="@style/m_style_layout_five"
            >
            <ImageView
                android:layout_width="@dimen/margin_45"
                android:layout_height="@dimen/margin_45"
                android:background="@drawable/ajh"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_play"
            style="@style/m_style_layout_five"
            >
            <ImageView
                android:layout_width="@dimen/margin_55"
                android:layout_height="@dimen/margin_55"
                android:background="@drawable/selector_checked_six"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_down"
            style="@style/m_style_layout_five"
            >
            <ImageView
                android:layout_width="@dimen/margin_45"
                android:layout_height="@dimen/margin_45"
                android:background="@drawable/ajb"
                />
        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/view_line_one"
       />

    <LinearLayout
        android:layout_marginLeft="@dimen/margin_11"
        android:layout_marginRight="@dimen/margin_11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_weight="1"
            android:layout_marginTop="@dimen/item_margin_three"
            android:id="@+id/item_ming_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            style="@style/Text4_one_one"
            android:text="-- --"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left|center"
            android:layout_marginTop="@dimen/margin_10"
            android:paddingBottom="@dimen/margin_12"
            >
            <LinearLayout
                android:id="@+id/k_one"
                style="@style/vosice_layout"
                >
                <ImageView
                    style="@style/sel_img_style_one"
                    android:background="@drawable/bof0"
                    />
                <TextView
                    android:id="@+id/item_name_tv"
                    android:text="--"
                    style="@style/sel_text_style"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/k_two"
                style="@style/vosice_layout"
                >
                <ImageView
                    style="@style/sel_img_style"
                    android:background="@drawable/bof4"
                    />
                <TextView
                    android:id="@+id/item_time_tv"
                    android:text="--"
                    style="@style/sel_text_style"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/k_three"
                style="@style/vosice_layout"
                >
                <ImageView
                    style="@style/sel_img_style"
                    android:background="@drawable/bof5"
                    />
                <TextView
                    android:id="@+id/item_peo_tv"
                    android:text="--"
                    style="@style/sel_text_style"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/k_four"
                style="@style/vosice_layout"
                android:visibility="gone"
                >
                <ImageView
                    style="@style/sel_img_style"
                    android:background="@drawable/selector_checked_night"
                    />
                <TextView
                    android:id="@+id/item_down_tv"
                    android:text="已下载"
                    style="@style/sel_text_style"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:paddingLeft="@dimen/margin_11"
        android:paddingRight="@dimen/margin_11"
        android:paddingBottom="@dimen/margin_11"
        android:id="@+id/introduce_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Text12"
        android:text="..."
        />


</LinearLayout>