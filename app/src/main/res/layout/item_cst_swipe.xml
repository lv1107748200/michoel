<?xml version="1.0" encoding="utf-8"?>
<fm.qian.michael.widget.swipemenulib.SwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:padding="@dimen/item_margin_two"
    app:ios="false"
    app:leftSwipe="true"
    app:swipeEnable="true">

    <android.support.v7.widget.CardView
        android:id="@+id/content"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="@color/color_29200"
        card_view:cardCornerRadius="@dimen/radius"
        card_view:cardElevation="0dp"
        >

        <fm.qian.michael.widget.custom.SelectableRoundedImageView
            android:id="@+id/item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@color/color_line_one"
            app:sriv_left_bottom_corner_radius="@dimen/radius"
            app:sriv_left_top_corner_radius="@dimen/radius"
            app:sriv_right_bottom_corner_radius="@dimen/radius"
            app:sriv_right_top_corner_radius="@dimen/radius"
            />

        <TextView
            android:id="@+id/item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:background="@drawable/loop_color_ten"
            android:paddingTop="@dimen/margin_7"
            android:paddingBottom="@dimen/margin_7"
            android:paddingRight="@dimen/margin_10"
            android:paddingLeft="@dimen/margin_13"
            android:textSize="@dimen/size_14"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/margin_15"
            />

    </android.support.v7.widget.CardView>




    <!-- 以下都是侧滑菜单的内容依序排列 -->
    <Button
        android:id="@+id/btnDelete"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@color/color_F86"
        android:text="删除"
        android:textColor="@android:color/white"/>

</fm.qian.michael.widget.swipemenulib.SwipeMenuLayout>