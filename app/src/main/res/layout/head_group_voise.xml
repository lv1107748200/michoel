<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <fm.qian.michael.widget.custom.SelectableRoundedImageView
            android:id="@+id/item_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            />
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/margin_11"
            android:layout_marginLeft="@dimen/margin_11"
            android:layout_marginBottom="@dimen/dp_19"
            android:id="@+id/item_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            style="@style/Text4_one_one"
            />
    </LinearLayout>

    <include layout="@layout/item_make"/>

    <include layout="@layout/item_xq_gs"/>

    <View
        style="@style/view_line"
        />

</LinearLayout>